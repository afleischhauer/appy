<p id="notice"><%= notice %></p>


    <div class="product-comments">
      <% if @product.highest_rating_comment %>
      <%= @product.highest_rating_comment.body %>
      <%= @product.lowest_rating_comment.body %>
      <% end %>
    </div>

<img>
  <%= image_tag(@product.image_url, class: "thumbnail img-fluid") %>
</img>

<section class="product-description">

  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <div>
    Average Rating:
       <div class="rated" data-score="<%= @product.average_rating %>"></div>
  </div>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  <p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>


  <%= form_with(url: '/payments/create') do |form| %>
    <%= render partial: "shared/stripe_checkout_button" %>
    <%= hidden_field_tag(:product_id, @product.id) %>
  <% end %>


  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

</section>

<div>
  <%= render 'new_comment' %>
  <%= render 'comment' %>
  <%= will_paginate @comments %>
</div>
